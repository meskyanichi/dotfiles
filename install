#! /bin/sh

dotfiles_dir="$HOME/.dotfiles"
ssh_dir="$HOME/.ssh"
gpg_dir="$HOME/.gnupg"
homebrew_url="https://raw.githubusercontent.com/Homebrew/install/master/install"
spacemacs_url="https://github.com/syl20bnr/spacemacs"
spacemacs_rev="3142f070f"
zshrc_local="$HOME/.zshrc.local"

if [ ! -f $ssh_dir/id_rsa ]; then
  echo "Setup $ssh_dir before proceeding."
  exit 1
fi

chmod 700 $ssh_dir
chmod 600 $ssh_dir/*

if [ ! -f $gpg_dir/secring.gpg ]; then
  echo "Setup $gpg_dir before proceeding."
  exit 1
fi

chmod 700 $gpg_dir
chmod 600 $gpg_dir/*

echo "Creating Developer directory."
mkdir -p $HOME/Developer

if [ ! -d $dotfiles_dir ]; then
  echo "Installing (git-based) dotfiles."
  git clone git@github.com:mrrooijen/dotfiles.git $dotfiles_dir
fi

echo "Linking (git-based) dotfiles: zsh, emacs, gnupg, git."
ln -nfs "$dotfiles_dir/zsh/zshrc"            "$HOME/.zshrc"
ln -nfs "$dotfiles_dir/emacs/spacemacs"      "$HOME/.spacemacs"
ln -nfs "$dotfiles_dir/gnupg/gpg-agent.conf" "$HOME/.gnupg/gpg-agent.conf"
ln -nfs "$dotfiles_dir/git/gitconfig"        "$HOME/.gitconfig"

echo "Adding $zshrc_local."
touch $zshrc_local

echo "Installing fonts."
cp $dotfiles_dir/fonts/* /Library/Fonts

echo "Installing xcode command-line tools."
xcode-select --install

echo "Installing homebrew."
/usr/bin/ruby -e "$(curl -fsSL $homebrew_url)"

echo "Installing gpg."
brew install gpg

echo "Installing git."
brew install git

echo "Installing iterm."
brew cask install iterm2

echo "Installing emacs."
brew cask install emacs
brew install ag pinentry-mac

if [ ! -d "$HOME/.emacs.d" ]; then
  git clone $spacemacs_url $HOME/.emacs.d
  git -C $HOME/.emacs.d checkout $spacemacs_rev
fi

echo "Installing spectacle."
brew cask install spectacle
